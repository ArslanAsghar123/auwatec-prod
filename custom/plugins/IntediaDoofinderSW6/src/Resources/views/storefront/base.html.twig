{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_body_script %}

    {{ parent() }}

    {% if config('IntediaDoofinderSW6.config.doofinderEnabled') and config('IntediaDoofinderSW6.config.doofinderInjectionBlock') == 2 %}
        {% block intedia_doofinder_include %}
            <template data-intedia-doofinder data-intedia-doofinder-options='{ "layerType": "{{ config('IntediaDoofinderSW6.config.doofinderLayer') }}", "engineHash": "{{ page.footer.extensions.doofinder.hashId }}", "installationId": "{{ page.footer.extensions.doofinder.storeId }}", "doofinderRecommendation": {% if config('IntediaDoofinderSW6.config.doofinderRecommendation') %}1{% else %}0{% endif %}, "addToCartUrl": "{{ path('frontend.checkout.product.add-by-number') }}", "offCanvasUrl": "{{ path('frontend.cart.offcanvas') }}" }'></template>
        {% endblock %}
    {% endif %}

{% endblock %}