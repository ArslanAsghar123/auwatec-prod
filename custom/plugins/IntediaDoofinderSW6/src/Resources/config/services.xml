<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Entities -->
        <service id="Intedia\Doofinder\Custom\DooFinderLayerDefinition">
            <tag name="shopware.entity.definition" entity="intedia_doofinder_layer" />
        </service>

        <service id="Intedia\Doofinder\Core\Content\ProductExport\Service\ExportHandler" public="true">
            <argument type="service" id="product_stream.repository" />
            <argument type="service" id="sales_channel.repository" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\SettingsHandler" />
        </service>

        <service id="Intedia\Doofinder\Core\Content\Settings\Service\SettingsHandler" public="true">
            <argument type="service" id="product_export.repository" />
            <argument type="service" id="product_stream.repository" />
            <argument type="service" id="sales_channel.repository" />
            <argument type="service" id="sales_channel_domain.repository" />
            <argument type="service" id="language.repository" />
            <argument type="service" id="currency.repository" />
            <argument type="service" id="intedia_doofinder_layer.repository" />
        </service>

        <service id="Intedia\Doofinder\Core\Content\Update\Service\UpdateHandler" public="true">
            <argument type="service" id="product_export.repository" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\SettingsHandler" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="translator" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\CommunicationHandler" />
        </service>

        <service id="Intedia\Doofinder\Core\Content\Settings\Service\CommunicationHandler" public="true">
            <argument type="service" id="Intedia\Doofinder\Doofinder\Api\Management" />
            <argument type="service" id="Intedia\Doofinder\Doofinder\Api\DoofinderGraphCommunication" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\SettingsHandler" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\ProductExport\Service\ExportHandler" />
        </service>

        <service id="Intedia\Doofinder\Core\Framework\Adapter\Twig\Extension\ThumbnailWidthExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="Intedia\Doofinder\Core\Content\Product\SalesChannel\Suggest\UncachedProductSuggestRoute" decorates="Shopware\Core\Content\Product\SalesChannel\Suggest\ProductSuggestRoute" decoration-priority="-1100" public="true">
            <argument type="service" id="Intedia\Doofinder\Core\Content\Product\SalesChannel\Suggest\UncachedProductSuggestRoute.inner"/>
        </service>

        <service id="Intedia\Doofinder\Core\Content\Product\SearchKeyword\ProductSearchBuilderDecorator"
                 decorates="Shopware\Core\Content\Product\SearchKeyword\ProductSearchBuilderInterface"
                 decoration-priority="-50010"
        >
            <argument id="Intedia\Doofinder\Core\Content\Product\SearchKeyword\ProductSearchBuilderDecorator.inner" type="service"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="monolog.logger.doofinder"/>
            <argument type="service" id="Intedia\Doofinder\Doofinder\Api\Search" />
        </service>

        <service id="Intedia\Doofinder\Core\Framework\Adapter\Twig\Extension\DoofinderCategoryExtension">
            <argument type="service" id="Shopware\Core\Content\Category\Service\CategoryBreadcrumbBuilder" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <tag name="twig.extension"/>
        </service>

        <service id="Intedia\Doofinder\Core\Framework\Adapter\Twig\Extension\DoofinderGroupIdExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="Intedia\Doofinder\Core\Content\ProductExport\Subscriber\ProductExportSubscriber">
            <argument type="service" id="Shopware\Core\Content\Category\Service\NavigationLoader" />
            <argument type="service" id="Shopware\Core\Content\ProductStream\Service\ProductStreamBuilder"/>
            <argument type="service" id="category.repository" />
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="sales_channel.product.repository" />
            <argument type="service" id="customer_group.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Intedia\Doofinder\Core\Framework\Adapter\Twig\Extension\ImCleanExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="Intedia\Doofinder\Core\Framework\Adapter\Twig\Extension\DoofinderPriceExtension">
            <argument type="service" id="product.repository" />
            <argument type="service" id="sales_channel.product.repository" />
            <tag name="twig.extension"/>
        </service>

        <service id="Intedia\Doofinder\Core\Framework\Adapter\Twig\Extension\DoofinderVariantExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="Intedia\Doofinder\Core\Framework\Adapter\Twig\Extension\ThumbnailWidthExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="Intedia\Doofinder\Doofinder\Api\Search">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="monolog.logger.doofinder"/>
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\SettingsHandler" />
        </service>

        <service id="Intedia\Doofinder\Doofinder\Api\Management" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="monolog.logger.doofinder"/>
        </service>

        <service id="Intedia\Doofinder\Doofinder\Api\DoofinderGraphCommunication" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="monolog.logger.doofinder"/>
        </service>

        <service id="Intedia\Doofinder\Framework\Cookie\DoofinderCookieProvider" decorates="Shopware\Storefront\Framework\Cookie\CookieProviderInterface">
            <argument type="service" id="Intedia\Doofinder\Framework\Cookie\DoofinderCookieProvider.inner" />
            <argument type="service" id="monolog.logger.doofinder"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <service id="Intedia\Doofinder\Resources\snippet\de_DE\SnippetFile_de_DE" public="true">
            <tag name="shopware.snippet.file"/>
        </service>

        <service id="Intedia\Doofinder\Resources\snippet\en_GB\SnippetFile_en_GB" public="true">
            <tag name="shopware.snippet.file"/>
        </service>

        <service id="Intedia\Doofinder\Storefront\Controller\DoofinderController" public="true">
            <argument type="service" id="product_export.repository" />
            <argument type="service" id="Shopware\Core\Content\Seo\SeoUrlPlaceholderHandlerInterface" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\SettingsHandler" />
            <argument type="service" id="Intedia\Doofinder\Doofinder\Api\Search" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\CommunicationHandler" />
            <argument type="service" id="Intedia\Doofinder\Doofinder\Api\Management" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Intedia\Doofinder\Administration\Controller\ManagementController" public="true">
            <argument type="service" id="Intedia\Doofinder\Core\Content\ProductExport\Service\ExportHandler" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\SettingsHandler" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\CommunicationHandler" />
            <argument>%kernel.logs_dir%</argument>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Intedia\Doofinder\Storefront\Subscriber\SearchSubscriber">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="monolog.logger.doofinder"/>
            <argument type="service" id="Intedia\Doofinder\Doofinder\Api\Search" />
            <argument type="service" id="sales_channel_domain.repository" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="Intedia\Doofinder\Core\Content\Settings\Service\SettingsHandler" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Intedia\Doofinder\Util\Logger" class="Monolog\Logger">
            <factory service="Shopware\Core\Framework\Log\LoggerFactory" method="createRotating" />
            <argument type="string">intedia_doofinder</argument>
        </service>

        <service id="Intedia\Doofinder\Core\Content\ProductExport\Decorator\ProductExportRendererDecorator" decorates="Shopware\Core\Content\ProductExport\Service\ProductExportRenderer">
            <argument type="service" id="Intedia\Doofinder\Core\Content\ProductExport\Decorator\ProductExportRendererDecorator.inner" />
        </service>

    </services>
</container>
