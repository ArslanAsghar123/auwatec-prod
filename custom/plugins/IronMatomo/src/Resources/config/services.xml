<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="IronMatomo\Resources\snippet\de_DE\SnippetFile_de_DE">
            <tag name="shopware.snippet.file"/>
        </service>

        <service id="IronMatomo\Resources\snippet\en_GB\SnippetFile_en_GB">
            <tag name="shopware.snippet.file"/>
        </service>

        <service id="IronMatomo\Subscriber\MatomoSettingsSubscriber">
            <argument type="service" id="IronMatomo\Matomo\MatomoDataService"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="Shopware\Core\Content\Category\Service\CategoryBreadcrumbBuilder"/>
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="IronMatomo\Matomo\MatomoDataService">
            <argument type="service" id="sales_channel_domain.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="IronMatomo\Framework\Cookie\CustomCookieProvider"
                 decorates="Shopware\Storefront\Framework\Cookie\CookieProviderInterface">
            <argument type="service" id="IronMatomo\Framework\Cookie\CustomCookieProvider.inner" />
        </service>
    </services>
</container>
