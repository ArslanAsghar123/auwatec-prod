{% sw_extends '@Storefront/storefront/page/account/order-history/order-detail.html.twig' %}

{% block page_account_order_item_detail_table_header_name %}
    {% if config("AcrisDiscountGroupCS.config.cartColumnLayout") == "custom" %}
        <div class="col-4 order-detail-content-header-cell order-header-name">
            {{ "account.orderItemColumnName"|trans|sw_sanitize }}
        </div>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block page_account_order_item_detail_table_header_price %}
    {{ parent()}}

    {% if config("AcrisDiscountGroupCS.config.cartColumnLayout") == "custom" %}
        <div class="col-2 order-detail-content-header-cell order-header-price">
            {{ "acris-discount-group.account.orderItemColumnDiscount"|trans|sw_sanitize }}
        </div>
    {% endif %}
{% endblock %}
