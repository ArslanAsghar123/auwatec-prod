{% block page_account_overview_acris_discounts %}
    {% if page.extensions.acris_discount_group.assigned_discount_groups|first %}
        <div class="account-overview-card account-overview-acris-discounts">
            <div class="card">
                <div class="card-body">
                    {% block page_account_overview_acris_discounts_title %}
                        <h2 class="card-title">
                            {{ "account.acrisDiscountsTitle"|trans|sw_sanitize }}
                        </h2>
                    {% endblock %}

                    {% block page_account_overview_acris_discounts_content %}
                        <div class="acris-discounts-wrapper">
                            {% for discountGroup in page.extensions.acris_discount_group.assigned_discount_groups %}
                                {% block page_account_overview_acris_discounts_item %}
                                    <div class="acris-discount">{{ discountGroup|sw_sanitize }}</div>
                                {% endblock %}
                            {% endfor %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
