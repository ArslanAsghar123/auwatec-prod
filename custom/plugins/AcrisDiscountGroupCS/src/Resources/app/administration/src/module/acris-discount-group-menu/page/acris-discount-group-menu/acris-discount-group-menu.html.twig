{% block acris_discount_group_index_index %}
<sw-page class="acris-discount-group-menu-index sw-settings-index">
    {% block acris_discount_group_index_index_smart_bar_header %}
    <template #smart-bar-header>
        {% block acris_discount_group_index_index_smart_bar_header_title %}
        <h2>
            {% block acris_discount_group_index_index_smart_bar_header_title_text %}
                {{ $tc('acris-discount-group.general.mainMenuItemGeneral') }}
            {% endblock %}
        </h2>
        {% endblock %}
    </template>
    {% endblock %}

    {% block acris_discount_group_index_index_content %}
    <template #content>
        {% block acris_discount_group_index_index_content_card_view %}
        <sw-card-view>
            {% block acris_discount_group_index_index_content_card %}
            <sw-card class="acris-discount-group-menu_index__card">
                {% block acris_discount_group_index_index_content_grid %}
                <div class="acris-settings-content-grid sw-settings__content-grid sw-settings__tabs">
                    {% block acris_discount_group_index_index_card_item %}
                        {% block acris_discount_group_index_rule %}
                            <sw-settings-item
                                :label="$tc('acris-discount-group.general.mainMenuItemGeneral')"
                                :to="{ name: 'acris.discount.group.index' }"
                                class="acris-settings-item">
                                <template #icon>
                                    <sw-icon name="regular-rule"></sw-icon>
                                </template>
                            </sw-settings-item>
                        {% endblock %}
                        {% block acris_discount_group_more_config %}
                            {% set baseUrl = app.request.getScheme() ~ '://' ~ app.request.getHost() %}
                            <sw-settings-item
                                id="acris-discount-group"
                                :label="$tc('acris-discount-group.general.mainMenuItemMoreSettings')"
                                :to="{name: 'sw.extension.config', params: { namespace: 'AcrisDiscountGroupCS' }}"
                                class="acris-settings-item">
                                <template #icon>
                                    <sw-icon name="regular-cog"></sw-icon>
                                </template>
                            </sw-settings-item>
                        {% endblock %}
                    {% endblock %}
                </div>
                {% endblock %}
            </sw-card>
            {% endblock %}
        </sw-card-view>
        {% endblock %}
    </template>
    {% endblock %}
</sw-page>
{% endblock %}
