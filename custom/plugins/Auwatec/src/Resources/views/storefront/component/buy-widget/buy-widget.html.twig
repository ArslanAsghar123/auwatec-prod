                <img src="{{ asset('bundles/auwatec/logo/vorkasse-rgb.svg', 'asset') }}" alt="Vorkasse" class="img-fluid">
            </div>
            <div class="detail-payment-method">
                <img src="{{ asset('bundles/auwatec/logo/lastschrift-rgb.svg', 'asset') }}" alt="Lastschrift" class="img-fluid">
