{% sw_extends '@Storefront/storefront/component/buy-widget/buy-widget.html.twig' %}


{% block buy_widget_price %}
    <h1 class="product-detail-name d-none d-lg-block">
        {{ product.translated.name }}
    </h1>

    {% if context.customer is not defined %}
        <div class="detail-flashbags">
            {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
                type: 'success',
                content: 'detail.registerMessage'|trans|sw_sanitize
            } %}
        </div>
    {% endif %}

    {% if product.translated.customFields.migration_Auwatec_product_feature_artikel %}
        <div class="product-detail-advantage-list">
            {{ product.translated.customFields.migration_Auwatec_product_feature_artikel|raw }}
        </div>
    {% endif %}

    {{ parent() }}
{% endblock %}

{% block buy_widget_tax %}
    {{ parent() }}
    {% if product.purchaseUnit %}
        <div class="product-detail-price-unit">
                <span class="price-unit-label">
                {{ "detail.priceUnitName"|trans|sw_sanitize }}
            </span>

            <span class="price-unit-content">
                {{ product.purchaseUnit }} {{ product.unit.translated.name }}
            </span>

            {% if price.referencePrice is not null %}
                <span class="price-unit-reference-content">
                    ({{ price.referencePrice.price|currency }}{{ "general.star"|trans|sw_sanitize }} / {{ price.referencePrice.referenceUnit }} {{ price.referencePrice.unitName }})
                </span>
            {% endif %}
        </div>
    {% endif %}
    {% if product.productNumber %}
        <div class="product-detail-ordernumber-container">
            {{ "detail.productNumberLabel"|trans|sw_sanitize }}
            <meta itemprop="productID"
                  content="{{ product.id }}"/>
            <span class="product-detail-ordernumber"
                  itemprop="sku">{{ product.productNumber }}</span>
        </div>
    {% endif %}
{% endblock %}

{# content moved to buy_widget_tax #}
