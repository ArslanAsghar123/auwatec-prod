{% sw_extends '@Storefront/storefront/layout/header/header.html.twig' %}

{% block layout_header_actions %}
    {{ parent() }}
    <div class="header-phone">
        <div class="header-phone-inner">
            <a href="https://www.gepruefter-webshop.de/kundentool/siegel/PZ3926-1024/" target="_blank" rel="noopener noreferrer" class="header-certified-link" onclick="window.open(this.href, '_blank'); return false;">
                <img src="{{ asset('bundles/auwatec/logo/gepruefter-webshop-logo.png') }}" alt="Geprüfter Webshop mit Käuferschutz" class="header-certified-logo" loading="lazy">
            </a>
            {% sw_icon 'phone-a' style { 'namespace': 'Auwatec' } %}
            <a href="tel:{{ "general.phoneNumber"|trans|striptags }}">
                {{ "general.phoneNumber"|trans|striptags }}
            </a>
        </div>
        <div class="header-language-inner">
            {% sw_include '@Storefront/storefront/layout/header/actions/language-widget.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block layout_header_navigation_toggle_button_icon %}
    {% sw_icon 'burger' style { 'namespace': 'Auwatec' } %}
{% endblock %}

{# just changed the icon #}
{% block layout_header_search_toggle %}
    <div class="col-auto d-sm-none">
        <div class="search-toggle">
            <button class="btn header-actions-btn search-toggle-btn js-search-toggle-btn collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#searchCollapse"
                    aria-expanded="false"
                    aria-controls="searchCollapse"
                    aria-label="{{ "header.searchButton"|trans|striptags }}">
                {% sw_icon 'zoom-a' style { 'namespace': 'Auwatec' } %}
            </button>
        </div>
    </div>
{% endblock %}