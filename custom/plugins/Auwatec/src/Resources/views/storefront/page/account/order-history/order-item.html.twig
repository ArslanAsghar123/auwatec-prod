{% sw_extends '@Storefront/storefront/page/account/order-history/order-item.html.twig' %}

{% block page_account_order_item_order_number_col %}
    {{ parent() }}
    {% if order.customerComment %}
        <div class="col-12 order-table-header-order-number">
            <strong class="order-table-header-label">{{ "checkout.finishInfoComment"|trans|sw_sanitize }}</strong>
            <span class="order-table-body-value">{{ order.customerComment|sw_sanitize|nl2br }}</span>
        </div>
    {% endif %}
{% endblock %}

{% block page_account_order_item_order_table_header_cell_payment_status %}
    <div class="col-12 col-sm order-table-header-order-table-header-cell"></div>
{% endblock %}

{% block page_account_order_item_order_table_body_cell_payment_status %}
    <div class="col-12 col-sm order-table-header-order-table-body-cell">
        <strong class="order-table-header-label">
            {{ "account.orderPaymentStatus"|trans|sw_sanitize }}{{ "account.colonCharacter"|trans|sw_sanitize }}
        </strong>
        <span class="order-table-body-value"></span>
    </div>
{% endblock %}