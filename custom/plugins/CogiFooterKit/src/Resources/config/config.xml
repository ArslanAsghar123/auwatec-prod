<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">


    <card>
        <component name="cogi-footer-kit-configuration-banner">
            <name>cogiFooterKitConfigurationBanner</name>
            <extension>CogiFooterKit</extension>
        </component>
    </card>

    <card>
        <title>Basic Configuration</title>
        <title lang="de-DE">Grundeinstellungen</title>

        <input-field type="bool">
            <name>cogiFooterKitFullWidth</name>
            <label>Display the footer in full width</label>
            <label lang="de-DE">Den Footer in voller breite anzeigen lassen</label>
            <defaultValue>false</defaultValue>
        </input-field>
    </card>
</config>