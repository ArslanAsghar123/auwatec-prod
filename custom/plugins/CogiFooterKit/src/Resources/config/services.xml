<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Cogi\CogiFooterKit\Core\Content\FooterKitDefinition">
            <tag name="shopware.entity.definition" entity="cogi_footer_kit" />
        </service>

        <service id="Cogi\CogiFooterKit\Subscriber\FooterKitSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="cogi_footer_kit.repository"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\Detail\ProductDetailRoute"/>
            <argument type="service" id="product.repository"/>
        </service>

        <service id="Cogi\CogiFooterKit\Core\Content\Aggregate\FooterKitTranslation\FooterKitTranslationDefinition">
            <tag name="shopware.entity.definition" entity="cogi_footer_kit_translation" />
        </service>

        <service id="Cogi\CogiFooterKit\Core\Framework\Adapter\Twig\Extension\FooterKitTwigExtensions">
            <tag name="twig.extension"/>
        </service>
    </services>
</container>