{% block sw_cms_element_last_seen_product_slider %}
    <div class="sw-cms-el-product-slider sw-cms-el-last-seen-product-slider has--pagination" :class="classes">
        {% block sw_cms_element_last_seen_product_slider_title %}
            <div class="sw-cms-el-product-slider__title" v-if="element.config.title.value">
                {{ element.config.title.value }}
            </div>
        {% endblock %}

        {% block sw_cms_element_last_seen_product_slider_text %}
            <div class="sw-cms-el-product-slider__text" v-if="element.config.text.value">
                <div v-html="element.config.text.value"></div>
            </div>
        {% endblock %}

        {% block sw_cms_element_last_seen_product_slider_content %}
            <div class="sw-cms-el-product-slider__content">
                {% block sw_cms_element_last_seen_product_slider_arrow_left %}
                    <div v-if="hasNavigation" class="sw-cms-el-product-slider__navigation">
                        <sw-icon class="sw-cms-el-product-slider__navigation-button"
                                 name="regular-chevron-left"
                                 size="24">
                        </sw-icon>
                    </div>
                {% endblock %}

                {% block sw_cms_element_last_seen_product_slider_product_holder %}
                    <div class="sw-cms-el-product-slider__product-holder" :style="getSliderBoxWidth" ref="productHolder">
                        {% block sw_cms_element_last_seen_product_slider_demo_data %}
                            <sw-cms-el-product-box :element="demoProductElement"
                                                   v-for="index in sliderBoxLimit"
                                                   :key="index">
                            </sw-cms-el-product-box>
                        {% endblock %}
                    </div>
                {% endblock %}

                {% block sw_cms_element_last_seen_product_slider_arrow_right %}
                    <div v-if="hasNavigation" class="sw-cms-el-product-slider__navigation">
                        <sw-icon class="sw-cms-el-product-slider__navigation-button"
                                 name="regular-chevron-right"
                                 size="24">
                        </sw-icon>
                    </div>
                {% endblock %}

            </div>
        {% endblock %}
    </div>
{% endblock %}
